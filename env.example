# Google AI Studio (Gemini) - Required for AI summarization
GEMINI_API_KEY=your_gemini_key_here
# Optional: Override default model (e.g., "models/gemini-2.5-flash")
GEMINI_MODEL_NAME=

# AssemblyAI - Required for video transcription
ASSEMBLYAI_API_KEY=your_assemblyai_key_here

# ConvertKit - Optional, for email subscription and broadcasting features
KIT_API_SECRET=your_kit_api_secret_here
KIT_FORM_ID=your_kit_form_id_here
# Optional: Email template ID for custom email layouts
KIT_EMAIL_TEMPLATE_ID=

# Admin Password - Required for accessing /admin panel
ADMIN_PASSWORD=your_secure_password_here

# YouTube Cookies - Optional, Base64 encoded
# Required only for downloading age-restricted or bot-blocked videos
# Export with: yt-dlp --cookies-from-browser chrome --cookies cookies.txt https://youtube.com
# Then encode: python -c "import base64; print(base64.b64encode(open('cookies.txt','rb').read()).decode())"
YTDLP_COOKIES_BASE64=

